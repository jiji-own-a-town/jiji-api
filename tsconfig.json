{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "lib": ["dom", "es6", "es7", "esnext"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true
    },
    "exclude": ["dist", "node_modules"]
}
